---
import Navbar from '../components/Navbar.astro';
import '@fontsource/nunito';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      href="/images/page/favicon.svg"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@Ducen29" />
    <meta
      name="twitter:title"
      content="Duccem | Full Stack Software Engineer"
    />
    <meta
      name="twitter:description"
      content="Since 2018 working for local companies in my country, where I specialized  in the development of administrative software..."
    />
    <meta
      name="twitter:image"
      content="https://raw.githubusercontent.com/Duccem/duccem.github.io/main/public/images/page/cover_page.png"
      <meta
      property="og:url"
      content="https://duccem.github.io"
    />
    <meta property="og:title" content="Duccem | Full Stack Software Engineer" />
    <meta
      property="og:description"
      content="Since 2018 working for local companies in my country, where I specialized  in the development of administrative software..."
    />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/Duccem/duccem.github.io/main/public/images/page/cover_page.png"
    />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>
<style is:global>
  body {
    padding: 0;
    margin: 0;
    font-family: 'Nunito', Arial, Helvetica, sans-serif;
    background-color: #f9f5f2;
  }

  html ::-webkit-scrollbar {
    width: 10px;
  }
  html ::-webkit-scrollbar-track {
    background-color: #f9f5f2;
  }

  html ::-webkit-scrollbar-thumb {
    background: #91a8ed;
    border: 3px solid #282825;
    border-radius: 5px;
  }
</style>
